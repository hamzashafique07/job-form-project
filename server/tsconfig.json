// server/tsconfig.json
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "target": "ES2019",
    "moduleResolution": "node",
    "esModuleInterop": true, // added
    "allowSyntheticDefaultImports": true, // added
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
    "@job-form/shared": ["../shared/dist"],
    "@job-form/shared/*": ["../shared/dist/*"]
 }

  },
  "include": [
    "src/app.ts", 
    "src/server.ts",
    "src/controllers/formController.ts",
    "src/models/Form.ts",
    "src/routes/formRoute.ts",
    "src/routes/healthRoute.ts",
    "src/utils/errorMap.ts"
    
  ],
  "references": [{ "path": "../shared" }]
}
